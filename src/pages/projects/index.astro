---
import { getCollection } from 'astro:content';
import Base from '@/layouts/Base.astro';
import Back from '@/components/Back.astro';

const projects = await getCollection('projects');
---

<Base>
  <main class="container mx-auto my-8 max-w-4xl px-4">
    <div class="mb-8">
      <Back href="/">Home</Back>

      <div class="mb-8">
        <div class="mb-4">
          <h1
            class="from-trans-blue via-soft-lavender to-trans-pink bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent md:text-5xl"
          >
            Projects
          </h1>
        </div>

        <div class="space-y-3">
          <p
            class="text-warm-gray-800 max-w-3xl text-lg leading-relaxed font-medium"
          >
            Open source projects and experiments in systems programming, web
            development, and creative coding.
          </p>
          <p class="text-warm-gray-700 max-w-2xl leading-relaxed">
            From UEFI bootloaders to image formats, each project is crafted with
            attention to detail and a love for elegant solutions.
          </p>
        </div>
      </div>
    </div>

    <div class="grid gap-6 md:gap-8">
      {
        projects.map((project) => (
          <article class="group border-warm-gray-200/80 from-warm-gray-50 to-trans-blue/5 hover:border-trans-blue/20 hover:shadow-trans-blue/10 relative overflow-hidden rounded-xl border bg-gradient-to-br p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-lg">
            <a href={`/projects/${project.id}/`} class="block">
              <div class="mb-4">
                <div class="flex items-center gap-2">
                  <span class="bg-trans-blue h-2 w-2 animate-pulse rounded-full" />
                  <span class="bg-trans-blue/10 text-trans-blue-dark rounded-md px-2 py-1 text-xs font-semibold tracking-wide uppercase">
                    Open Source
                  </span>
                </div>
              </div>

              <h2 class="text-warm-gray-900 group-hover:text-trans-blue-dark mb-3 text-xl leading-tight font-bold transition-colors md:text-2xl">
                {project.data.title}
              </h2>

              <p class="text-warm-gray-700 mb-4 leading-relaxed">
                {project.data.description}
              </p>

              <div class="flex items-center justify-between">
                <div class="text-trans-blue-dark group-hover:text-hover-blue text-sm font-medium transition-colors">
                  <span>Explore project</span>
                </div>
                <div class="flex gap-2">
                  <span class="bg-warm-gray-100 text-warm-gray-600 rounded-full px-2 py-1 text-xs">
                    Rust
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>

    <!-- Cute empty state if no projects -->
    {
      projects.length === 0 && (
        <div class="py-16 text-center">
          <div class="mb-4 text-6xl">üõ†Ô∏è</div>
          <h3 class="text-warm-gray-700 mb-2 text-xl font-medium">
            No projects yet!
          </h3>
          <p class="text-warm-gray-600">
            But when there are, they'll be absolutely adorable ‚ú®
          </p>
        </div>
      )
    }
  </main>
</Base>
