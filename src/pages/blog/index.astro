---
import { getCollection } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';
import Base from '@/layouts/Base.astro';
import Back from '@/components/Back.astro';

const blog = (await getCollection('blog')).sort((prevPost, nextPost) => {
  return nextPost.data.pubDate.valueOf() - prevPost.data.pubDate.valueOf();
});
---

<Base>
  <main class="container mx-auto my-8 max-w-4xl px-4">
    <div class="mb-8">
      <Back href="/">Home</Back>

      <div class="mb-8">
        <h1
          class="from-trans-pink via-trans-blue to-soft-lavender mb-4 bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent md:text-5xl"
        >
          Blog
        </h1>

        <p class="text-warm-gray-700 max-w-2xl text-lg leading-relaxed">
          Thoughts on Rust development, systems programming insights, and the
          occasional deep dive into low-level computing adventures.
        </p>
      </div>
    </div>

    <div class="grid gap-6 md:gap-8">
      {
        blog.map((post) => (
          <article class="group border-trans-pink/15 from-warm-gray-50/80 to-trans-pink/8 hover:border-trans-pink/25 relative overflow-hidden rounded-xl border bg-gradient-to-br p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-md">
            <a href={`/blog/${post.id}/`} class="block">
              <div class="mb-4">
                <FormattedDate
                  date={post.data.pubDate}
                  class="bg-trans-blue/15 text-trans-blue-dark rounded-full px-3 py-1 text-sm font-medium"
                />
              </div>

              <h2 class="text-warm-gray-800 group-hover:text-trans-blue-dark mb-3 text-xl leading-tight font-bold transition-colors md:text-2xl">
                {post.data.title}
              </h2>

              <p class="text-warm-gray-700 mb-4 leading-relaxed">
                {post.data.description}
              </p>

              <div class="text-trans-pink-dark group-hover:text-hover-pink flex items-center text-sm font-medium transition-colors">
                <span>Read article</span>
                <svg
                  class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
            </a>
          </article>
        ))
      }
    </div>

    <!-- Empty state -->
    {
      blog.length === 0 && (
        <div class="py-16 text-center">
          <h3 class="text-warm-gray-700 mb-2 text-xl font-medium">
            No posts yet
          </h3>
          <p class="text-warm-gray-600">Check back soon for new content!</p>
        </div>
      )
    }
  </main>
</Base>
