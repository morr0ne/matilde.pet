---
import Link from '@/components/Link.astro';
import Base from '@/layouts/Base.astro';
---

<Base>
  <main
    class="container mx-auto flex h-full flex-col items-center justify-center px-4 text-center"
  >
    <div class="max-w-4xl space-y-8">
      <h1
        class="from-trans-pink via-trans-blue to-soft-lavender bg-gradient-to-r bg-clip-text text-4xl font-bold text-transparent md:text-5xl lg:text-6xl"
      >
        Matilde Morrone
      </h1>

      <div class="space-y-6">
        <p class="text-warm-gray-800 text-xl font-medium md:text-2xl">
          Systems Developer & Open Source Enthusiast
        </p>

        <p class="text-warm-gray-700 mx-auto max-w-2xl text-lg leading-relaxed">
          Building the future of systems programming with Rust, creating
          delightful developer tools, and contributing to open source projects.
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-6">
        <Link
          href="/blog"
          icon="lucide:book-open"
          class="group border-warm-gray-200 bg-warm-gray-50 hover:border-trans-pink/30 hover:bg-trans-pink/5 rounded-lg border px-6 py-4 transition-all"
        >
          <span
            class="text-warm-gray-800 group-hover:text-trans-pink-dark font-medium"
            >Blog</span
          >
        </Link>

        <Link
          href="/projects"
          icon="lucide:code"
          class="group border-warm-gray-200 bg-warm-gray-50 hover:border-trans-blue/30 hover:bg-trans-blue/5 rounded-lg border px-6 py-4 transition-all"
        >
          <span
            class="text-warm-gray-800 group-hover:text-trans-blue-dark font-medium"
            >Projects</span
          >
        </Link>

        <Link
          href="https://github.com/morr0ne"
          icon="lucide:github"
          external
          class="group border-warm-gray-200 bg-warm-gray-50 hover:border-warm-gray-300 hover:bg-warm-gray-100 rounded-lg border px-6 py-4 transition-all"
        >
          <span
            class="text-warm-gray-800 group-hover:text-warm-gray-900 font-medium"
            >GitHub</span
          >
        </Link>

        <Link
          href="mailto:contact@morrone.dev"
          icon="lucide:mail"
          class="group border-warm-gray-200 bg-warm-gray-50 hover:border-warm-gray-300 hover:bg-warm-gray-100 rounded-lg border px-6 py-4 transition-all"
        >
          <span
            class="text-warm-gray-800 group-hover:text-warm-gray-900 font-medium"
            >Contact</span
          >
        </Link>
      </div>
    </div>
  </main>
</Base>
